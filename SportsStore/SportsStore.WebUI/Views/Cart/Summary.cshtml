@model SportsStore.Domain.Entities.Cart

<div class="navbar-text">
    <b>Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) items(s),
    @Model.ComputeTotalValue().ToString("c")
</div>
<div class="nav-item">
    @Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default btn-primary" })
</div>
